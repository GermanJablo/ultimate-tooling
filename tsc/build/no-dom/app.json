{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "preserveWatchOutput": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    /* If transpiling with TypeScript: */
    "module": "NodeNext",
    "sourceMap": true,
    /* If your code doesn't run in the DOM: */
    "lib": ["es2022"],
    // Build defaults (1)
    "noEmit": false,
    "outDir": "${configDir}/dist"
  },
  // Build defaults (2)
  "include": ["${configDir}/src"],
  "exclude": [
    "${configDir}/**/dist",
    "${configDir}/**/*.test.*",
    "${configDir}/**/*.spec.*",
    "${configDir}/**/*.test-d.*",
    "${configDir}/**/test/**",
    "${configDir}/**/tests/**",
    "${configDir}/**/_test/**",
    "${configDir}/**/_tests/**"
  ]
}
